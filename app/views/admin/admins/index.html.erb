<h1> Listing users </h1>
<%= link_to 'Show admin', admin_admin_path(current_admin) %>
<table>
	<tr>
		<th>Email</th>
	</tr>

	<% @users.each do |user| %>
		<tr>
			<td><%= user.email %></td>
			<td><%= link_to 'Destroy', user,
							method: :delete,
							data: { confirm: 'Are you shure?' } %> </td>
			<td><%=button_to 'Delete User', user, controller: "users", action: "destroy", id: user.id, confirm: "Are you sure?", method: :delete %></td>
		</tr>
	<% end %>
</table>